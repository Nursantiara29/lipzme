<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.spk.santi.lipzme.MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <ImageButton
                android:id="@+id/imgBtnTentang"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:contentDescription="btnMainTentang"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/tentang"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/imgBtnBandingkan"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@+id/imgBtnBandingkan"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/imgBtnBantuan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:contentDescription="btnMainBantuan"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/imgBtnBandingkan"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintLeft_toRightOf="@+id/imgBtnBandingkan"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgBtnBandingkan"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/bantuan"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/imgBtnBandingkan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@null"
                android:contentDescription="BtnMainBandingkan"
                android:onClick="AHPActivity"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bandingkan"
                tools:ignore="HardcodedText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="94dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bandingkan"
                android:textAlignment="center"
                android:textColor="@color/text_pink"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                app:layout_constraintLeft_toLeftOf="@+id/imgBtnBandingkan"
                app:layout_constraintRight_toRightOf="@+id/imgBtnBandingkan"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/imgBtnBandingkan"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="271dp"
                android:layout_height="177dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/iconlogo"
                tools:ignore="ContentDescription"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="75dp"
                app:layout_constraintHorizontal_bias="0.505" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:text="Bantuan"
                android:textColor="@color/text_pink"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="@+id/imgBtnBantuan"
                app:layout_constraintRight_toRightOf="@+id/imgBtnBantuan"
                app:layout_constraintTop_toBottomOf="@+id/imgBtnBantuan"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:text="Tentang"
                android:textColor="@color/text_pink"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="@+id/imgBtnTentang"
                app:layout_constraintRight_toRightOf="@+id/imgBtnTentang"
                app:layout_constraintTop_toBottomOf="@+id/imgBtnTentang"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="HardcodedText" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</LinearLayout>